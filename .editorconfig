# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.js]
charset = utf-8
indent_size = 2

[*.css]
charset = utf-8
indent_size = 4

[{package.json,.travis.yml,.karma.conf,.esdoc.json}]
indent_size = 2
