{
  "name": "btdc",
  "version": "1.0.0",
  "description": "Bicycle touring digital companion",
  "scripts": {
    "postinstall": "npm run install:cordova",
    "install:cordova": "cordova platform add android browser & true",
    "postinstall:cordova": "cordova plugin add cordova-plugin-geolocation & cordova plugin add https://github.com/apache/cordova-plugin-file & cordova plugin add cordova-plugin-camera & cordova plugin add cordova-plugin-file-transfer & cordova plugin add https://github.com/hypery2k/cordova-sqlite-plugin",
    "format": "jscs www/ -x -r inline; true",
    "doc": "esdoc -c .esdoc.json",
    "build": "browserify www/js/app.js -t babelify -o www/js/bundle.js",
    "postbuild": "npm run doc",
    "prestart:browser":"npm run build",
    "prestart:android":"npm run build",
    "start:browser": "cordova serve 8000",
    "start:android": "cordova run android",
    "start": "npm run start:android",
    "test": "mocha --compilers js:babel/register --recursive",
    "watch": "nodemon -e js,html,css --watch \"www\" --ignore \"www/js/bundle.js\" --exec \"npm run start:browser\"",
    "livereload": "livereload \"platforms/browser/www/\"",
    "dev": "parallelshell \"npm run watch\" \"npm run livereload\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bikelomatic-complexity/app.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bikelomatic-complexity/app/issues"
  },
  "homepage": "https://github.com/bikelomatic-complexity/app#readme",
  "dependencies": {
    "blob-util": "^1.2.0",
    "immutable": "^3.7.6",
    "leaflet": "^0.7.7",
    "pouchdb": "^5.1.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-hammerjs": "^0.4.2",
    "react-leaflet": "^0.10.0",
    "react-mdl": "^0.15.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.3",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.3",
    "rest": "^1.3.1",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel": "^5.8.34",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "chai": "^3.4.1",
    "cordova": "^5.3.3",
    "esdoc": "^0.4.1",
    "jscs": "^2.3.4",
    "livereload": "^0.4.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "react-addons-test-utils": "^0.14.2",
    "redux-devtools": "^2.1.5",
    "skin-deep": "^0.13.0"
  }
}
