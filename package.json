{
  "name": "bicycle-touring-companion",
  "version": "0.1.0",
  "description": "Bicycle touring digital companion",
  "scripts": {
    "postinstall": "cordova prepare",
    "format:enforce": "esformatter -i 'www/js/**/*.js'",
    "format": "esformatter --diff 'www/js/**/*.js'",
    "lint": "eslint 'www/js/**/*.js'",
    "doc": "esdoc -c .esdoc.json",
    "build": "browserify www/js/app.js -t babelify -t envify -o www/js/bundle.js",
    "prestart:browser": "npm run build",
    "prestart:android": "npm run build",
    "start:browser": "cordova serve 8000",
    "start:android": "cordova run android",
    "start": "npm run start:android",
    "test": "mocha --compilers js:babel/register --recursive",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha -- --compilers js:babel/register --recursive",
    "watch": "nodemon -e js,html,css --watch \"www\" --ignore \"www/js/bundle.js\" --exec \"npm run start:browser\"",
    "livereload": "livereload \"platforms/browser/www/\"",
    "dev": "parallelshell \"npm run watch\" \"npm run livereload\"",
    "debug:android": "cordova build android",
    "postdebug:android": "node scripts/postdebug-android.js",
    "release:android": "cordova build android --release",
    "postrelease:android": "node scripts/postrelease-android.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bikelomatic-complexity/app.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bikelomatic-complexity/app/issues"
  },
  "homepage": "https://github.com/bikelomatic-complexity/app#readme",
  "dependencies": {
    "blob-util": "^1.2.0",
    "docuri": "^4.2.1",
    "immutable": "^3.7.6",
    "leaflet": "^0.7.7",
    "ngeohash": "^0.6.0",
    "pouchdb": "^5.1.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-hammerjs": "^0.4.2",
    "react-leaflet": "^0.10.0",
    "react-mdl": "^0.15.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.3",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.3",
    "request": "^2.69.0",
    "rest": "^1.3.1",
    "to-id": "^1.0.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel": "^5.8.34",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "chai": "^3.4.1",
    "cordova": "^5.3.3",
    "envify": "^3.4.0",
    "esdoc": "^0.4.1",
    "esformatter": "^0.9.1",
    "esformatter-ignore": "^0.1.3",
    "esformatter-jsx": "^4.1.3",
    "eslint": "^2.0.0",
    "eslint-plugin-react": "^3.16.1",
    "istanbul": "^0.4.2",
    "livereload": "^0.4.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "react-addons-test-utils": "^0.14.2",
    "redux-devtools": "^2.1.5",
    "skin-deep": "^0.13.0"
  }
}
